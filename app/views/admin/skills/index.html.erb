<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4">Listing Skills</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @skills.each do |skill| %>
            <tr>
              <td><%= skill.name %></td>
              <td><%= link_to 'Show', admin_skill_path(skill) %></td>
              <td><%= link_to 'Edit', edit_admin_skill_path(skill) %></td>
              <td><%= link_to 'Destroy', admin_skill_path(skill), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Skill', new_admin_skill_path, class: 'btn btn-dark rounded-0 mt-2' %>
    </div>
  </div>
</div>
