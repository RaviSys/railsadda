<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <title>RailsAdda</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <%= stylesheet_link_tag    'auth', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'auth', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container mt-5 mb-5">
      <div class="row">
        <div class="col-md-6 mx-md-auto col-sm-9 mx-sm-auto col-12">
          <%= render 'partials/flash' %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
