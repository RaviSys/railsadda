<div class="container mt-5 mb-5">
  <div class="row">

    <div class="col-12">
      <div class="text-center">
        <h1 class="mt-3 mb-2">Our Blogs</h1>
        <p class="lead mb-2">Explore awesome blogs written by verified professionals. Share them if you like and comment if you love.</p>
        <hr class="custom-hr mb-5">
      </div>
    </div>

    <% @articles.each do |article| %>
      <div class="col-md-4 col-lg-4 col-sm-2 col-12 mb-4">
        <div class="card rounded-0">
          <%= image_tag 'blogdum.jpg', class: 'card-img-top img-fluid' %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article %></h5>
            <small class="text-muted"><%= article.subtitle %></small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
