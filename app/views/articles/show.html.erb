<div class="container">
  <div class="row mt-5">
    <div class="col-md-9">
      <p class="font-30 mb-1"><%= @article.title %></p>
      <%= image_tag "blogdum.jpg", class: 'img-fluid' %>
      <div class="d-flex flex-row">
        <div class="p-2">
          <%= link_to like_article_path(@article), method: :patch do %>
            <%= image_tag 'like.png', width: '30' %>
          <% end %><br>
          <span class="ml-2"><%= @article.get_upvotes.size %></span>
        </div>
        <div class="p-2">
          <%= link_to dislike_article_path(@article), method: :patch do %>
            <%= image_tag 'dislike.png', width: '30' %>
          <% end %><br>
          <span class="ml-2"><%= @article.get_downvotes.size %></span>
        </div>
        <div class="p-2">
          <%= link_to 'javascript:void(0)' do %>
            <%= image_tag 'share.png', width: '30' %>
          <% end %>
        </div>
      </div>
      <div class="d-flex flex-row">
        <% @article.keywords.each do |keyword| %>
          <div class="p-1">
            <span class="badge badge-primary"><%= keyword %></span>
          </div>
        <% end %>
      </div>
      <div class="p-2 mt-4">
        <%= @article.content.html_safe %>
      </div>
      <% if user_signed_in? %>
        <% if @article.user == current_user %>
          <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-dark rounded-0 btn-lg mb-4 mr-3" %>
        <% end %>
      <% end %>
      <%= link_to 'Back', articles_path, class: "btn btn-outline-dark rounded-0 btn-lg mb-4" %>
    </div>
  </div>
</div>
