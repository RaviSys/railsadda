<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'partials/user_sidebar' %>      
    </div>
    <div class="col-md-9">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= link_to article.title, article %></td>
              <td>
                <div class="btn-group">
                  <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Action
                  </button>
                  <div class="dropdown-menu">
                    <%= link_to user_article_path(article), class: 'dropdown-item text-success' do %>
                      <i class="fas fa-eye mr-1"></i> Show
                    <% end %>
                    <%= link_to edit_user_article_path(article), class: 'dropdown-item text-secondary' do %>
                      <i class="fas fa-pencil-alt mr-1"></i> Edit
                    <% end %>
                    <%= link_to user_article_path(article), class: 'dropdown-item text-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this article?' } do %>
                      <i class="fas fa-trash mr-1"></i> Delete
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= render 'partials/logout_popup' %>
