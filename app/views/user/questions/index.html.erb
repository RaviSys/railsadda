<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.title, question %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Action
            </button>
            <div class="dropdown-menu">
              <%= link_to user_question_path(question), class: 'dropdown-item text-success' do %>
                <i class="fas fa-eye mr-1"></i> Show
              <% end %>
              <%= link_to edit_user_question_path(question), class: 'dropdown-item text-secondary' do %>
                <i class="fas fa-pencil-alt mr-1"></i> Edit
              <% end %>
              <%= link_to user_question_path(question), class: 'dropdown-item text-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this question?' } do %>
                <i class="fas fa-trash mr-1"></i> Delete
              <% end %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
