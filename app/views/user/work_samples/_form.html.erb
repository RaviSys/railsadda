<%= form_for [:user, work_sample] do |form| %>
  <%= render "partials/error", object: work_sample %>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control rounded-0' %>
  </div>

  <div class="form-group">
    <%= form.label :codebase_url %>
    <%= form.text_field :codebase_url, class: 'form-control rounded-0' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control rounded-0', rows: '10' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-dark rounded-0 mr-2' %>
    <%= link_to 'Back', user_work_samples_path, class: 'btn btn-outline-dark rounded-0' %>
  </div>
<% end %>
