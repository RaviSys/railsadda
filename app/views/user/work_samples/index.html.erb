<%= link_to 'Add Work Sample', new_user_work_sample_path, class: 'btn btn-dark rounded-0 mb-2' %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @work_samples.each do |work_sample| %>
      <tr>
        <td><%= link_to work_sample.name, user_work_sample_path(work_sample) %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Action
            </button>
            <div class="dropdown-menu">
              <%= link_to user_work_sample_path(work_sample), class: 'dropdown-item text-success' do %>
                <i class="fas fa-eye mr-1"></i> Show
              <% end %>
              <%= link_to edit_user_work_sample_path(work_sample), class: 'dropdown-item text-secondary' do %>
                <i class="fas fa-pencil-alt mr-1"></i> Edit
              <% end %>
              <%= link_to user_work_sample_path(work_sample), class: 'dropdown-item text-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this work_sample?' } do %>
                <i class="fas fa-trash mr-1"></i> Delete
              <% end %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
